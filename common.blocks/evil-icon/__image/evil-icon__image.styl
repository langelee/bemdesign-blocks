@import "../../../libs/bem-components/design/colors.styl"
@import "../../../libs/bem-components/design/spaces.styl"

.evil-icon__image
  .icon
    background: $clean
  position: absolute
  top: 0px
  left: 0px
  height: 100px
  width: 100px
  box-sizing: border-box
  background: url('/i/icon-bg.png')
  background-position: 50% 50%
  border: 1px solid $normal
  &:hover
    background: url('/i/icon-bg-hover.png')
    background-position: 50% 50%
    border: 1px solid lighten($base, 80%)
